                        </div>
                        <div class="mb-4">
                            <label class="form-label d-flex align-content-center" id="">اسم المستخدم </label>
                            <input type="text" asp-for="UserName" class="form-control border-success" id="name" placeholder="User Name لا يتكرر لأكثر من طالب">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label class="form-label d-flex align-content-center">كلمة السر</label>
                            <input type="password" asp-for="Password" class="form-control border-success" id="password" placeholder=" برجاء كتابه كلمة السر وان لا تقل عن 6 احرف ">
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <div class="mb-4">
                            <label for="exampleFormControlInput1" class="form-label d-flex align-content-center" id="">السنة الدراسية </label>
                            <select asp-for="LevelId" class="form-control border-success d-flex align-content-center"
                                    asp-items="@(new SelectList(ViewBag.Level,"LevelId","YearLevel"))">
                                    <option></option>
                            </select>
                            <span asp-validation-for="LevelId" class="text-danger"></span>

                        </div>
                        <div class="mb-4">
                            <label for="exampleFormControlInput1" class="form-label d-flex align-content-center" id="">مشترك </label>
                            <select asp-for="Subscribe" class="form-control border-success d-flex align-content-center"><option value="True">نعم</option><option value="False">لا</option></select>
                            <span asp-validation-for="Subscribe" class="text-danger"></span>

                        </div>
